<%= form_for @post, html: { multipart: true } do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <table>
    <tr>
      <td>
        <%= f.label :left %><br>
    <%= f.file_field :left , :class => "form-control" %>    
      </td>
      <td>
        <%= f.label :right %><br>
    <%= f.file_field :right , :class => "form-control"%>
    
      </td>
    </tr>
      </table>
  </div>

  <div class="field">
    <%= f.text_area :legend, :placeholder => "Legend", :cols => 50 %>
  </div>
  <div class="actions">
    <%= f.submit nil , :class => "btn btn-success"  %>
  </div>
<% end %>
