<p id="notice"><%= notice %></p>
  
    <% @posts.each do |post| %>
        <br>
        <div class="row" >
            <div class="col-md-1"></div>
            <div class="col-md-10">
                <div class="row well">
                    <div class="col-md-6 col-xs-6">
                        <span class="" ><%= post.user.email %> </span>
                    </div>
                    <div class="col-md-6 col-xs-6" id="time_ago">
                        <span class=""><%= time_ago_in_words(post.created_at) %></span>
                    </div> 
                </div>  
                <div class="row well">
                    
                        <div class="col-md-6 col-xs-6 well">
                                    <%= image_tag post.left.url(:large) , :class => "img-responsive"%>
                        </div>      
                        <div class="col-md-6 col-xs-6 well">
                                    <%= image_tag post.right.url(:large) , :class => "img-responsive" %>
                        </div>
                </div>   
                    
                        <p class="legend"><%= post.legend %></p>
                       
                        <%=  link_to like_post_path(post), method: :put , class: "btn btn-success" do %>
                           <span class="glyphicon glyphicon-heart"><%= post.get_upvotes.size%></span>
                             
                           <% for user in post.votes_for.up.by_type(User).voters%>
                              <%= user.email + "," %>
                           <% end %>
                        <% end %> 
            </div>
        </div>
        <div class="col-md-1"></div>
    <% end %>
<%= link_to 'New Post', new_post_path %>
