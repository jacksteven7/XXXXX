<p id="notice"><%= notice %></p>
  
    <% @posts.each do |post| %>
        <br>
        <div class="row" >
                
                    <span class="" ><%= post.user.email %> </span>
                    <span class=""><%= time_ago_in_words(post.created_at) %></span>
                  
                    <table>
                        <tr><td>
                                <div id="">
                                    <%= image_tag post.left.url(:large) %>
                                </div>
                            </td>
                            <td>
                                <div id="">
                                    <%= image_tag post.right.url(:large) %></td>
                                </div>
                            </td>
                        <tr>
                    </table>
                
                    <p class="legend"><%= post.legend %></p>
                   
                    <%=  link_to like_post_path(post), method: :put , class: "btn btn-success" do %>
                       <span class="glyphicon glyphicon-heart"><%= post.get_upvotes.size%></span>
                         
                       <% for user in post.votes_for.up.by_type(User).voters%>
                          <%= user.email + "," %>
                       <% end %>
                    <% end %> 
        </div>
    <% end %>
<%= link_to 'New Post', new_post_path %>
