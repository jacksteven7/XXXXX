<p id="notice"><%= notice %></p>



  
    <% @posts.each do |post| %>
                    
        <h4><%= post.user.email %> </h4>
        <br>
        <table>
            <tr><td>
                    <div class="imagepost">
                        <%= image_tag post.left.url(:medium) %>
                        <%=  link_to like_post_path(post), method: :put , class: "btn btn-success" do %>
                            <span class="glyphicon glyphicon-heart"><%= post.get_upvotes.size%></span>
                            <span class="glyphicon glyphicon-map-marker"><%= post.get_upvotes.size%></span>
                        <% end %>
                    </div>
                </td>
                <td>
                    <div class="imagepost">
                        <%= image_tag post.right.url(:medium) %></td>
                    </div>
                </td>
            <tr>
        </table>
        <br>
        <small><%= post.legend %></small>
        <%= link_to 'Show', post %>
        <% if post.user == current_user %>
          <%= link_to 'Edit', edit_post_path(post) %>
          <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
        <br><br><br>
    <% end %>



