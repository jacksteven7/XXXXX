<%= form_for([@post,@post.comments.build]) do |f| %>
	<div class="form-group">
		<div class="row" >
          <div class="col-md-6 col-xs-6">   
              <%= f.text_area :body, :placeholder =>"Comments", :class => "form-field"%>
          </div>
        </div>
        <div class="row" >
          <div class="col-md-6 col-xs-6">   
              <%= f.submit nil, :class => "btn btn-primary" %>
          </div>
        </div>    
		
		
	</div>	
<% end %>